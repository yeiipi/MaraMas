<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Page
    </title>
    <link rel="icon" type="image/png" href="../resources/app_logo_claro.png">
    <link rel="stylesheet" href="../public/css/register.css">
    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"> -->
</head>
<body>
   
<div class= "fullscreen">
    <img class= "logo" src="../resources/app_logo_oscuro.png" alt="">
    <div class="card">

        <h1>Registration</h1>
        <ul>
            <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
            <li><%= error.message %></li>
            <% }) %> <% } %>
          </ul>
        <form method="post">
            <div class="text_field">
                <input name= "user_name" id= "user_name" type="text" >
                <label>First Name</label>
            </div>
            <div class="text_field">
                <input name= "user_lastname" id= "user_lastname" type="text">
                <label>Lastname</label>
            </div>
            <div class="text_field">
                <input name= "user_email" id= "user_email" type="Email">
                <label>Email</label>
            </div>
            <div class="text_field">
                <input name= "user_password" id= "user_password"type="Password">
                <label>Password</label>
            </div>
            <input type="submit" value="Register Now">
        </form>
        
    </div>
</div>   


</body>