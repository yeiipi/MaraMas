<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register admin</title>
</head>
<body>
    <h1>Register Admin</h1>
    <ul>
        <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
            <li class= 'error_class'><%= error.message %></li>
        <% }) %> <% } %>
      </ul>
    <form method="post" action="/register-admin">
        <div class="text_field">
            <li>
                <input name="user_name" id="user_name" type="text" placeholder="First Name">
            </li>
            <li>
                <input name="user_lastname" id="user_lastname" type="text" placeholder="Last name"> 
            </li>
            <li>
                <input name="user_email" id="user_email" type="email" placeholder="Email">
            </li>
            <li>
                <input name="user_password" id="user_password" type="password" placeholder="Password">
            </li>
            <li>
                <input name="confirm" id="confirm" type="password" placeholder="Confirm Password">
            </li>
            <li>
                <input name="address" id="address" type="text" placeholder="Address">
            </li>
            <li>
                <input name="phone_number" id="phone_number" type="text" placeholder="Phone Number">
            </li>
        </div>
        <input type="submit" value="Register Now">
    </form>
</body>
</html>